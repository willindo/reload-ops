{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
      "dockerfilePath": null,
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "install": {
          "cmds": ["npm install --legacy-peer-deps"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      },
      "startCommand": "npm run start:prod"
    }
  },
  "deploy": {
    "preDeployCommand": ["npm run db:migrate"]
  }
}
